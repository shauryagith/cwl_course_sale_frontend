{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "jsx": "react-jsx",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "types": ["react", "react-dom"],

    "ignoreDeprecations": "6.0",
    "strict": false
  },
  "include": ["src"]
}
